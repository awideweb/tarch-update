---
import { contact } from '../data/contact';
---

<footer class="bg-gray-50 border-t border-gray-200">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Contact Info -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-black">CONTACT</h3>
        <div class="space-y-2 text-gray-700">
          <p>{contact.address}</p>
          <p>Phone: {contact.phone}</p>
          <p>
            <a 
              href={`mailto:${contact.email}`}
              class="text-black hover:text-gray-700 transition-colors"
            >
              {contact.email}
            </a>
          </p>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-black">QUICK LINKS</h3>
        <div class="space-y-2">
          <a href="/" class="block text-gray-700 hover:text-black transition-colors">
            HOME
          </a>
          <a href="/projects" class="block text-gray-700 hover:text-black transition-colors">
            PROJECTS
          </a>
          <a href="/about" class="block text-gray-700 hover:text-black transition-colors">
            ABOUT
          </a>
          <a href="/contact" class="block text-gray-700 hover:text-black transition-colors">
            CONTACT
          </a>
        </div>
      </div>

      <!-- About -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-black">ABOUT</h3>
        <p class="text-gray-700 text-sm leading-relaxed">
          Talaat Architects specializes in carefully crafted projects both residential and small commercial. 
          Our process is centered on creative, integrated strategies that synthesize functional requirements 
          with modern materials and systems.
        </p>
      </div>
    </div>

    <div class="mt-8 pt-8 border-t border-gray-200">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-sm text-gray-600">
          Â© 2024 Talaat Studio. All rights reserved.
        </p>
        <div class="mt-4 md:mt-0 flex space-x-6">
          <a href="/" class="text-sm text-gray-600 hover:text-black transition-colors">
            HOME
          </a>
          <a href="/projects" class="text-sm text-gray-600 hover:text-black transition-colors">
            PROJECTS
          </a>
          <a href="/about" class="text-sm text-gray-600 hover:text-black transition-colors">
            ABOUT
          </a>
          <a href="/contact" class="text-sm text-gray-600 hover:text-black transition-colors">
            CONTACT
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>