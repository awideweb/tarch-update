---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { awards } from '../data/awards';

const awardsByYear = awards.reduce((acc, award) => {
  if (!acc[award.year]) {
    acc[award.year] = [];
  }
  acc[award.year].push(award);
  return acc;
}, {} as Record<string, typeof awards>);

const sortedYears = Object.keys(awardsByYear).sort((a, b) => parseInt(b) - parseInt(a));
---

<Layout 
  title="About | Talaat Studio" 
  description="Learn about Talaat Studio's design philosophy, history, mission, and principles. We specialize in residential and small commercial projects with a focus on modern design."
>
  <Header />
  
  <main class="bg-white">
    <!-- Hero Section -->
    <section class="relative h-96">
      <div class="absolute inset-0">
        <img 
          src="/src/assets/residential/6_KIAWAH/8_Ocean Front Residence_high res_Entry Stair and Tower.jpg" 
          alt="Kiawah Ocean Front Residence" 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black bg-opacity-50"></div>
      </div>
      <div class="relative z-10 h-full flex items-center justify-center">
        <div class="text-center text-white">
          <h1 class="text-4xl md:text-5xl font-bold">
            ABOUT
          </h1>
        </div>
      </div>
    </section>

    <!-- About Content -->
    <section class="py-20 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Tab Navigation -->
        <div class="flex justify-center mb-12">
          <div class="flex space-x-8">
            <button class="tab-button active text-sm font-medium text-black border-b-2 border-black pb-2" data-tab="history">
              HISTORY
            </button>
            <button class="tab-button text-sm font-medium text-gray-600 hover:text-black transition-colors pb-2" data-tab="mission">
              MISSION
            </button>
            <button class="tab-button text-sm font-medium text-gray-600 hover:text-black transition-colors pb-2" data-tab="principles">
              PRINCIPLES
            </button>
            <button class="tab-button text-sm font-medium text-gray-600 hover:text-black transition-colors pb-2" data-tab="objective">
              OBJECTIVE
            </button>
            <button class="tab-button text-sm font-medium text-gray-600 hover:text-black transition-colors pb-2" data-tab="awards">
              AWARDS
            </button>
          </div>
        </div>

        <!-- Tab Content -->
        <div class="tab-content">
          <div id="history" class="tab-pane active">
            <div class="text-center">
              <h2 class="text-2xl font-bold text-black mb-8">
                OUR HISTORY
              </h2>
              <p class="text-lg text-gray-700 leading-relaxed mb-8">
                Talaat Studio was founded with a vision to create exceptional architectural projects that blend modern design principles with timeless craftsmanship. Our journey began with a commitment to understanding each client's unique needs and translating them into thoughtful, functional spaces.
              </p>
              <p class="text-lg text-gray-700 leading-relaxed">
                Over the years, we have built a reputation for delivering carefully crafted residential and small commercial projects that stand the test of time. Our approach combines traditional architectural wisdom with contemporary materials and systems to create unique, inspiring environments.
              </p>
            </div>
          </div>

          <div id="mission" class="tab-pane">
            <div class="text-center">
              <h2 class="text-2xl font-bold text-black mb-8">
                OUR MISSION
              </h2>
              <p class="text-lg text-gray-700 leading-relaxed mb-8">
                Our mission is to create architecture that enhances the human experience through thoughtful design and expert craftsmanship. We believe that every project, regardless of scale, deserves careful attention to detail and a deep understanding of its context.
              </p>
              <p class="text-lg text-gray-700 leading-relaxed">
                We strive to produce unique projects that employ a modern vocabulary while acknowledging timeless principles of design. Through creative, integrated strategies, we synthesize functional requirements with the application of modern materials, systems, and assemblies.
              </p>
            </div>
          </div>

          <div id="principles" class="tab-pane">
            <div class="text-center">
              <h2 class="text-2xl font-bold text-black mb-8">
                OUR PRINCIPLES
              </h2>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-8 text-left">
                <div>
                  <h3 class="text-lg font-semibold text-black mb-4">THOUGHTFUL DESIGN</h3>
                  <p class="text-gray-700 leading-relaxed">
                    Every project begins with careful consideration of site, program, and client needs to create spaces that are both functional and inspiring.
                  </p>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-black mb-4">MODERN MATERIALS</h3>
                  <p class="text-gray-700 leading-relaxed">
                    We integrate contemporary materials and systems with traditional craftsmanship to achieve exceptional results.
                  </p>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-black mb-4">TIMELESS PRINCIPLES</h3>
                  <p class="text-gray-700 leading-relaxed">
                    Our work acknowledges enduring design principles while embracing modern architectural vocabulary.
                  </p>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-black mb-4">INTEGRATED STRATEGIES</h3>
                  <p class="text-gray-700 leading-relaxed">
                    We develop creative, integrated approaches that seamlessly blend functional requirements with aesthetic vision.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <div id="objective" class="tab-pane">
            <div class="text-center">
              <h2 class="text-2xl font-bold text-black mb-8">
                OBJECTIVE
              </h2>
              <p class="text-lg text-gray-700 leading-relaxed mb-8">
                Talaat Studio specializes in carefully crafted projects both residential and small commercial. 
                Our process is centered on creative, integrated strategies that synthesize functional 
                requirements with the application of modern materials, systems and assemblies.
              </p>
              <p class="text-lg text-gray-700 leading-relaxed">
                Through this process we are able to produce unique projects that employ a modern vocabulary 
                while acknowledging timeless principles of design.
              </p>
            </div>
          </div>

          <div id="awards" class="tab-pane">
            <div class="text-center">
              <h2 class="text-2xl font-bold text-black mb-8">
                AWARDS & RECOGNITION
              </h2>
              
              <!-- Awards Legend -->
              <div class="flex justify-center items-center gap-8 mb-12">
                <div class="flex items-center space-x-2">
                  <div class="w-4 h-4 bg-black rounded-full"></div>
                  <span class="text-sm font-medium text-gray-700">AIA AWARD</span>
                </div>
                <div class="flex items-center space-x-2">
                  <div class="w-4 h-4 bg-gray-400 rounded-full"></div>
                  <span class="text-sm font-medium text-gray-700">NON-AIA AWARD</span>
                </div>
              </div>
              
              <!-- Awards List -->
              <div class="space-y-8 text-left max-w-2xl mx-auto">
                {sortedYears.map((year) => (
                  <div class="border-b border-gray-200 pb-6">
                    <h3 class="text-xl font-bold text-black mb-4">
                      {year}
                    </h3>
                    <div class="space-y-3">
                      {awardsByYear[year].map((award) => (
                        <div key={award.id} class="flex items-start space-x-3">
                          <div class={`w-3 h-3 mt-2 rounded-full flex-shrink-0 ${
                            award.type === 'aia' ? 'bg-black' : 'bg-gray-400'
                          }`}></div>
                          <div>
                            <h4 class="font-semibold text-black">
                              {award.title}
                            </h4>
                            <p class="text-gray-600 text-sm">
                              {award.organization}
                            </p>
                            {award.description && (
                              <p class="text-gray-600 text-sm mt-1">
                                {award.description}
                              </p>
                            )}
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabButtons = document.querySelectorAll('.tab-button');
    const tabPanes = document.querySelectorAll('.tab-pane');

    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        const targetTab = button.getAttribute('data-tab');
        
        // Remove active class from all buttons and panes
        tabButtons.forEach(btn => {
          btn.classList.remove('active', 'text-black', 'border-b-2', 'border-black');
          btn.classList.add('text-gray-600');
        });
        tabPanes.forEach(pane => pane.classList.remove('active'));
        
        // Add active class to clicked button and corresponding pane
        button.classList.add('active', 'text-black', 'border-b-2', 'border-black');
        button.classList.remove('text-gray-600');
        document.getElementById(targetTab).classList.add('active');
      });
    });
  });
</script>

<style>
  .tab-pane {
    display: none;
  }
  
  .tab-pane.active {
    display: block;
  }
</style>